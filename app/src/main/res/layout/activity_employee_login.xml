<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testf"
    tools:context=".EmployeeLogin">

    <TextView
        android:id="@+id/admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin login"
        android:textColor="#2BF108"
        android:textSize="30sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="50dp"/>
    <ImageView
        android:id="@+id/person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin"
        android:src="@drawable/ic_baseline_person_24"/>
    <ImageView
        android:id="@+id/person2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/textinput"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_baseline_person_24"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:helperText="Required*"
        app:errorEnabled="true"
        android:gravity="center"
        android:layout_margin="3dp"
        android:layout_centerInParent="true"
        app:errorIconDrawable="@drawable/ic_baseline_error_24"
        android:hint="Enter your user name:"
        app:helperTextTextColor="#F30606"
        android:textColorHint="@color/black"
        app:counterTextColor="@color/black"
        app:boxStrokeColor="@color/black"
        app:endIconTint="@color/black"
        app:startIconTint="@color/black"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:textColor="@color/black"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinput2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        android:layout_below="@+id/textinput"
        app:counterMaxLength="10"
        app:helperText="Required*"
        app:errorEnabled="true"
        android:gravity="center"
        android:layout_margin="3dp"
        app:endIconMode="password_toggle"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        app:endIconTint="@color/black"
        app:errorIconDrawable="@drawable/ic_baseline_error_24"
        android:hint="Enter your password:"
        android:textColorHint="@color/black"
        app:counterTextColor="@color/black"
        app:boxStrokeColor="@color/black"
        app:helperTextTextColor="#F30606"
        app:startIconTint="@color/black"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:textColor="@color/black"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textinput2"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/round_background"
        android:gravity="center"
        android:padding="20dp"
        android:text="Login" />


</RelativeLayout>