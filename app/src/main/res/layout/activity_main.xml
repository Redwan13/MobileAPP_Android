<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testf"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="M-EXPENSE"
        android:textColor="#16F304"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:padding="20sp"
        android:gravity="center_vertical|center_horizontal"
        android:textFontWeight="500"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="1dp"
            android:text="Login as:"
            android:textColor="@color/black"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="0dp"
            android:layout_marginStart="25dp"
            android:text="@string/hint_admin_access_database_while_user_adds_information"
            android:textColor="#F40505"
            android:layout_marginLeft="25dp" />
        <Button
            android:id="@+id/employee"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ADMIN"
            android:background="@drawable/round_background"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="30dp"
            android:backgroundTint="#DFB8B8"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"/>
        <Button
            android:id="@+id/user"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_background"
            android:text="USER"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="30dp"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"/>

    </LinearLayout>


</LinearLayout>